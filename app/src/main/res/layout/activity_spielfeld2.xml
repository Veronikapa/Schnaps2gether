        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|center|right">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_eigeneKarte"
                android:scaleType="fitXY"
                android:clickable="false"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/Enemy"
                android:layout_toStartOf="@+id/Enemy"
                android:layout_gravity="bottom|right"
                android:background="@android:color/transparent"
                android:cropToPadding="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_gravity="top|left|center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_karteGegner"
                android:scaleType="fitXY"
                android:layout_gravity="top|left"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/Enemy"
                android:layout_toEndOf="@+id/Enemy"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/eigeneKartenLayout"
        android:paddingRight="30dp"
        android:layout_above="@+id/buttons_leiste">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="70dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte1"
                android:clickable="true"
                android:onClick="karte1OnClick"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_gravity="left|bottom|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="35dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte2"
                android:clickable="true"
                android:onClick="karte2OnClick"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_gravity="bottom|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte3"
                android:clickable="true"
                android:onClick="karte3OnClick"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte4"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:clickable="true"
                android:onClick="karte4OnClick"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:paddingLeft="0dp"
                android:layout_gravity="bottom|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte5"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="karte5OnClick"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_gravity="bottom|center" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="136dp"
        android:layout_height="100dp"
        android:id="@+id/deck_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/eigeneKartenLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="53dp"
            android:layout_height="59dp"
            android:layout_gravity="top|right"
            android:id="@+id/trumpfIconLayout">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView_trumpfIcon"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:background="@android:color/transparent"
                android:layout_gravity="left|bottom|center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_trumpf"
                android:longClickable="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:rotation="90" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/deckLayout"
            android:layout_gravity="left|center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_deck"
                android:background="@drawable/deck"
                android:scaleType="fitXY"
                android:layout_gravity="left|center_vertical" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="143dp"
        android:layout_height="119dp"
        android:layout_gravity="right|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/frameLayout"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">

