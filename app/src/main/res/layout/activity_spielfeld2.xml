
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Spielfeld"
    android:gravity="center_vertical"
    android:weightSum="1"
    android:background="@drawable/holz_hintergrund">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gegnerNameLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/name_plakette">

        <TextView
            android:id="@+id/Enemy"
            android:text="@string/spieler2" android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_centerHorizontal="true"
            style="@style/button_text"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/pointsText" />

        <TextView
            android:id="@+id/pointsText"
            android:text="@string/punktestand2" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            style="@style/button_text"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toRightOf="@+id/gegnerNameLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:gravity="top|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttons_leiste"
        android:weightSum="1"
        android:layout_alignRight="@+id/eigeneKartenLayout"
        android:layout_alignEnd="@+id/eigeneKartenLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/main_buttonTtauschen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Trumpf Tausch"
            style="@style/button_text"
            android:onClick="trumpfkarteTauschen"
            android:layout_marginLeft="0dp"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:background="@drawable/beiger_button"
            android:layout_marginRight="5dp"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/I"
                android:text="@string/spieler1" android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/pointsText2"
                android:text="@string/punktestand2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <Button
            android:id="@+id/main_button20er"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="@string/button20er"
            style="@style/button_text"
            android:onClick="popup20er"
            android:layout_gravity="center"

            android:background="@drawable/beiger_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/main_button40er"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="@string/button40er"
            android:onClick="ansagen40er"
            style="@style/button_text"
            android:layout_gravity="center"
            android:background="@drawable/beiger_button"
            android:layout_marginRight="5dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_buttonZ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/buttonZ"
            android:onClick="zudrehen"
            style="@style/button_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="@drawable/beiger_button"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false" />
        <!--        <Button
                    android:id="@+id/cmd_1K_I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/button1"
                    android:onClick="popup20er"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/cmd_2K_I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/button2"
                    android:onClick="ansagen40er"
                    android:visibility="visible" />

                <Button
                    android:layout_width="54dp"
                    android:layout_height="34dp"
                    android:text="New Button"
                    android:id="@+id/cmd_gestochen_I"
                    android:visibility="invisible" />-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:id="@+id/frameGegnerEigene"
        android:padding="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:touchscreenBlocksFocus="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|center|right">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_eigeneKarte"
                android:scaleType="fitXY"
                android:clickable="false"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/Enemy"
                android:layout_toStartOf="@+id/Enemy"
                android:layout_gravity="bottom|right"
                android:background="@android:color/transparent"
                android:cropToPadding="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_gravity="top|left|center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_karteGegner"
                android:scaleType="fitXY"
                android:layout_gravity="top|left"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/Enemy"
                android:layout_toEndOf="@+id/Enemy"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/eigeneKartenLayout"
        android:paddingRight="30dp"
        android:layout_above="@+id/buttons_leiste">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="80dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte1"
                android:clickable="true"
                android:onClick="karte1OnClick"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_gravity="left|bottom|center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte2"
                android:clickable="true"
                android:onClick="karte2OnClick"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_gravity="bottom|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="0dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte3"
                android:clickable="true"
                android:onClick="karte3OnClick"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte4"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:clickable="true"
                android:onClick="karte4OnClick"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:paddingLeft="0dp"
                android:layout_gravity="bottom|center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_karte5"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="karte5OnClick"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:layout_gravity="bottom|center" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="136dp"
        android:layout_height="100dp"
        android:id="@+id/deck_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/eigeneKartenLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:id="@+id/trumpfIconLayout">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_trumpf"
                android:longClickable="true"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:rotation="90"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deckLayout"
            android:layout_gravity="left|center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_deck"
                android:background="@drawable/deck_full"
                android:scaleType="fitXY"
                android:layout_gravity="left|center_vertical" />
        </LinearLayout>

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView_trumpfIcon"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:background="@android:color/transparent"
            android:layout_gravity="top|center" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="143dp"
        android:layout_height="119dp"
        android:layout_gravity="right|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/frameLayout"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rotation="45">

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/stichGegnerKarteI"
            android:background="@android:color/transparent"
            android:rotation="-40"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:onClick="ansagen40er" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/stichEigeneKarteI"
            android:cropToPadding="true"
            android:background="@android:color/transparent"
            android:rotation="40"
            android:layout_gravity="center"
            android:onClick="popup20er"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stichDeckI"
            android:hapticFeedbackEnabled="false"
            android:background="@drawable/deck"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="invisible"
            android:rotation="90"
            android:layout_marginTop="35dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="143dp"
        android:layout_height="119dp"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/frameLayout2"
        android:layout_alignTop="@+id/gegnerNameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rotation="45" />
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/stichEigeneKarteG"
            android:background="@android:color/transparent"
            android:rotation="-40"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginRight="0dp"
            android:onClick="ansagen40er"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/stichGegnerKarteG"
            android:cropToPadding="true"
            android:background="@android:color/transparent"
            android:rotation="40"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stichDeckG"
            android:hapticFeedbackEnabled="false"
            android:background="@drawable/deck"
            android:layout_gravity="center_horizontal|top"
            android:visibility="invisible"
            android:rotation="90"
            android:layout_marginBottom="30dp" />
    </FrameLayout>

    <Button
        style="@style/button_text"
        android:id="@+id/cmd_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/Beenden"
        android:onClick="abbrechenSpiel"
        android:singleLine="false"
        android:textColor="@android:color/white"
        android:background="@drawable/beiger_button"
        android:textAllCaps="false"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2"
        android:layout_alignBottom="@+id/gegnerNameLayout" />

</RelativeLayout>


