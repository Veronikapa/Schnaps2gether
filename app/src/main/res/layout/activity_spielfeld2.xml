                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rotation="45">

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:id="@+id/stichGegnerKarteI"
