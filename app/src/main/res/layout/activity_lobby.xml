<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GUI.Lobby">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/neu"
        android:id="@+id/cmd_neu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="neu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beitreten"
        android:id="@+id/cmd_beitreten"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cmd_neu"
        android:layout_toEndOf="@+id/cmd_neu"
        android:onClick="beitreten"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abbrechen"
        android:id="@+id/cmd_abbrechen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="0dp"
        android:text="Lobby - Warteraum"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_Spieluebersicht"
        android:visibility="visible"
        style="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="true"
        android:focusable="false"
        android:layout_above="@+id/cmd_neu"
        android:layout_alignRight="@+id/cmd_abbrechen"
        android:layout_alignEnd="@+id/cmd_abbrechen" />

</RelativeLayout>
